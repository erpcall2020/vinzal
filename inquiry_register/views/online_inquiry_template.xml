<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="tmp_customer_form" name="Partner Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <br/>
                    <br/>

                    <div class="col-md-12">
                        <form action="/customer/form/submit">
                         <div class="row">
                            <div class="form-group">
                                <label for="name">Parent Name:</label>
                                <input type="text" class="form-control" name="name" id="name" required="true"/>

                            </div>
                            <div class="form-group">
                                <label for="email">Student Name:</label>
                                <input type="text" class="form-control" name="student_name"
                                       id="student_name" required="true"/>
                            </div>

                         </div>
                            <div class="form-group">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" name="email"
                                       id="email" required="true"/>
                            </div>
                            <div class="form-group">
                                <label for="name">Phone:</label>
                                <input type="phone" class="form-control" name="phone_number"
                                       id="phone_number" required="true"/>
                            </div>
                            <div class="form-group">
                                <label for="name">Child Age:</label>
                                <input type="float" class="form-control" name="child_age"
                                       id="child_age"/>
                            </div>
                            <br/>

                            <div class="form-group">
                                <label for="interested_in_class">Interested In Class:</label>
                                <select class="form-control" name="interested_in_class" id="interested_in_class"
                                        required="true">
                                    <option value="pre_nursery">Pre Nursery</option>
                                    <option value="nursery">Nursery</option>
                                    <option value="kgi">KGI</option>
                                    <option value="kgii">KGII</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="father_occupation">Father Occupation:</label>
                                <input type="text" class="form-control" name="father_occupation"
                                       id="father_occupation"/>
                            </div>
                            <div class="form-group">
                                <label for="mother_occupation">Mother Occupation:</label>
                                <input type="text" class="form-control" name="mother_occupation"
                                       id="mother_occupation"/>
                            </div>
                            <div class="form-group">
                                <label for="reference">Reference:</label>
                                <input type="text" class="form-control" name="reference"
                                       id="reference"/>
                            </div>
                            <div class="form-group">
                                <label for="residence">Residence:</label>
                                <input type="text" class="form-control" name="residence"
                                       id="residence"/>
                            </div>
                            <div class="form-group">
                                <label for="purpose">Purpose:</label>
                                <input type="text" class="form-control" name="purpose"
                                       id="purpose"/>
                            </div>
                            <br/>
                            <button type="submit" class="btn btn-primary">Submit Inquiry</button>
                        </form>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                </div>
            </div>
        </t>
    </template>
</odoo>